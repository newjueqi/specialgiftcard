<?xml version="1.0"?>
<config>
    <sections>
        <giftcard translate="label" module="enterprise_giftcardaccount">
            <label>Gift Cards</label>
            <tab>sales</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <sort_order>500</sort_order>
            <groups>
                <reward_giftcardaccount_general translate="label" module="specialgiftcard">
                    <label>Batch Gift Card Account General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>410</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <code_length translate="label comment">
                            <label>Code Length</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Excluding prefix, suffix and separators.</comment>
                        </code_length>
                        <code_format translate="label">
                            <label>Code Format</label>
                            <frontend_type>select</frontend_type>
                            <source_model>enterprise_giftcardaccount/source_format</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </code_format>
                        <code_prefix translate="label">
                            <label>Code Prefix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </code_prefix>
                        <code_suffix translate="label">
                            <label>Code Suffix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </code_suffix>
                        <code_split translate="label comment">
                            <label>Dash Every X Characters</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>if empty no separation.</comment>
                        </code_split>
                        <balance translate="label comment">
                            <label>balance</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>if empty, default value is 100 yuan</comment>
                        </balance>   
                        <website translate="label comment">
                            <label>website</label>
                            <frontend_type>select</frontend_type>
                            <source_model>specialgiftcard/website</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>if empty, apply first website id</comment>
                        </website>  
                        <expires_date translate="label comment">
                            <label>expires date</label>
                            <frontend_model>specialgiftcard/adminhtml_system_config_date</frontend_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </expires_date>  
                        <generate_time translate="label comment">
                            <label>generate how many time</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>if empty , default three times</comment>
                        </generate_time>                         
						<generate translate="label comment">
                            <label></label>
                            <frontend_model>specialgiftcard/adminhtml_system_config_generate</frontend_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>WARNING: Save your configuration before running generation process.</comment>
                        </generate> 
                    </fields>
                </reward_giftcardaccount_general>
            </groups>
        </giftcard>
    </sections>
</config>
